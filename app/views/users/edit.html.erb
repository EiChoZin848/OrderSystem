<% content_for :title, "Edit User" %>

<div class="row">
    <div class="col">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
            <h5>Edit</h5>
            <div class="ibox-tools">
              <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
              </a>
              <a class="close-link">
                <i class="fa fa-times"></i>
              </a>
            </div>
          </div>
  
          <div class="ibox-content">
          
            <div>
              <% form_for @user do|f|  %>
               <div class="row">
                <div class="float-left i-width col-sm-6 b-r">
                  <h3 class="m-t-none m-b">Change Password</h3>
                  <div class="form-group">
                    <label>Email</label>
                      <%= f.text_field :email, :class=>"form-control", :autofocus => true %>
                  </div>
                  <div class="form-group">
                    <label>Password </label>
                    <%= f.password_field :password, :class=>"form-control", :autocomplete => "off" %>
                  </div>
                  <div class="col-sm-12">
                    <div class="hr-line-dashed"></div>
                    <%= f.submit "Update", :class=>"btn btn-sm btn-primary pull-right m-t-n-xs" %>
                  </div>
                </div>
                <div class="float-right i-width col-sm-6 b-r">
                  <%= image_tag 'lock.jpg', :width=>'100%', :height => '100%' %>
                </div>
               </div>
              <% end %>
            </div>
          </div>
        </div>
    </div>
</div>
<% content_for :title, "Forgot Password" %>

<center>
    <h2 style="font-size: 40px; margin-bottom: 50px; color: #f70b0b">INFORTECH<br /><br/> <span style="color: #1ab394; font-weight: 900">Solutions</span></h2>
</center>

<% if alert %>
<div class="alert alert-danger">
    <strong>Alert!</strong> <%= alert %>
</div>
<% end %>

<div class="ibox-content">
    <% if notice %>
        <div class="alert alert-info">
            <strong>Notice!</strong> <%= notice %>
        </div>
    <% end %>
    <br />

    <center><h3 style="margin-bottom: 40px;">Forgot Password</h3></center>
    <% form_for(:password_reset, :url=> password_resets_path) do |f| %>
        <div class="form-group m-t">      
            <%= f.text_field :email,:placeholder=>"Email", :class=>"form-control", :autofocus => true %>
        </div>
        <div class="form-group m-t">
            <%= f.submit "Sign in", :class => "btn btn-primary block full-width m-b" %>
        </div>
    
    <% end %>    
</div>